{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "es2017",
            "es7",
            "es6",
            "dom"
        ],
        "declaration": true,
        "outDir": "dist",
        "strict": false,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "jsx": "react",
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "tests",
        "test",
        "example"
    ]
}